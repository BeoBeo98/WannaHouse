<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="7.5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="7.5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  >
                <ImageView
                    android:id="@+id/image"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/roomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cv_image"
                android:text="roomStyle"
                android:textSize="12sp"
                android:textStyle="italic" />
            <TextView
                android:textSize="12sp"
                android:text=" . "
                android:id="@+id/dot"
                android:layout_toRightOf="@+id/roomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:text="capacity"
                android:id="@+id/capacity"
                android:layout_toRightOf="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/titleOfThePost"
                android:text="titleOfThePost"
                android:layout_toRightOf="@id/cv_image"
                android:layout_below="@+id/roomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:id="@+id/rentalPrice"
                android:layout_below="@+id/titleOfThePost"
                android:layout_toRightOf="@id/cv_image"
                android:text="rentalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_below="@+id/titleOfThePost"
                android:layout_toRightOf="@id/rentalPrice"
                android:text="k VND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/cv_image"
                android:textSize="12sp"
                android:id="@+id/address"
                android:text="address"
                android:layout_below="@id/rentalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>